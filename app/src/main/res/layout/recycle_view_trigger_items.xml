<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".70"
        android:id="@+id/trigger_list_title"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="11dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".70"
        android:layout_below="@+id/trigger_list_title"
        android:layout_alignLeft="@+id/trigger_list_title"
        android:layout_alignStart="@+id/trigger_list_title"
        android:id="@+id/trigger_list_subtitle" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".15"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_menu_edit"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:id="@+id/trigger_list_fab_edit"
        app:backgroundTint="?attr/colorPrimary"
        android:layout_alignBottom="@+id/trigger_list_subtitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".15"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
        android:id="@+id/trigger_list_fab_remove"
        app:backgroundTint="?attr/colorPrimary"
        android:layout_alignTop="@+id/trigger_list_fab_edit"
        android:layout_toLeftOf="@+id/trigger_list_fab_edit"
        android:layout_toStartOf="@+id/trigger_list_fab_edit"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp" />

</RelativeLayout>